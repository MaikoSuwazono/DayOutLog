<header>
  <nav class="navbar navbar-expand-lg" style="background-color: #eef8f7;">
    <div class="container-fluid mx-5 my-2">
      <%= link_to image_tag("DayOutLog_header.png", width: '200'), root_path, class: 'navbar-brand' %>
      <ul class="navbar-nav ml-auto d-flex align-items-center">
        <li class="nav-item">
          <%= button_to "新規投稿", new_post_path, { method: :get, class: "btn btn-dark" } %>
        </li>
        <li class="nav-item dropdown">
          <%= link_to "#", { class: "nav-link dropdown-toggle", id: "rt-menu-pc", role: "button", data: { bs_toggle: "dropdown" }, aria: { expanded: "false" } } do %>
            <%= image_tag current_user.avatar_url, class: 'rounded-circle mr15', width: '30', height: '30', accept: 'image/*' %>
            <%= current_user.name %>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "マイページ", user_path(current_user), class: "dropdown-item" %></li>
            <li><%= link_to "いいね一覧", post_likes_path(current_user), class: "dropdown-item" %></li>
            <li><%= link_to "ログアウト", logout_path, class: "dropdown-item", data: { turbo_method: :delete } %></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>