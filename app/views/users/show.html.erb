<% content_for(:title, "マイページ") %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <p class="fs-3 text-center fw-bold">マイページ</p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <h1 class="fw-bold fs-3 m-3">記事一覧</h2>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>