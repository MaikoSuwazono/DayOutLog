<% content_for(:title, "#{@user.name} - いいね一覧") %>
<div class="container pt-4">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="text-center">
        <ul class="list-inline">
          <li class="list-inline-item pr-5">
            <%= image_tag @user.avatar_url, class: 'rounded-circle mr15 mb-3', width: '90', height: '90' %>
          </li>
          <li class="list-inline-item">
            <p class="fs-3"><%= @user.name %></p>
          </li>
        </ul>
        <% if @user == current_user %>
          <%= link_to "編集", edit_user_path(@user), class: "btn btn-dark" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <h1 class="fw-bold fs-3 m-3">いいね一覧：<%= @posts.count %>件</h2>
          <%= render @posts %>
        <% else %>
          <h1 class="fw-bold fs-3 m-3">いいね一覧：0件</h2>
          <div class="m-3">いいねした投稿がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>