<tr id="comment-<%= comment.id %>">
  <td>
    <h3 class="small d-inline"><%= comment.user.name %></h3>
    <h3 class="small d-inline text-secondary"><%= l(comment.created_at, format: :time) %></h3>
    <p><%= simple_format(comment.body) %></p>
  </td>
  <td class="action">
    <% if !current_user.nil? && current_user.own?(comment) %>
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to "削除", post_comment_path(comment.post, comment), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "コメントを削除します。よろしいですか？" } %>
        </li>
      </ul>
    <% end %>
  </td>
</tr>
