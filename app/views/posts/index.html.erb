<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="input-group mx-5 my-3">
        <input type="text" class="form-control" placeholder="キーワードを入力">
        <button class="btn btn-dark" type="button" id="button-addon2">検索</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <h1 class="fw-bold fs-3 m-3">記事一覧</h2>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>