<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 my-5">
      <h1 class="fw-bold fs-3"><%= t('.title') %></h1>
      <%= form_with model: @post, class: "new_post", local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :departure_date %>
          <%= f.date_field :departure_date, class: "form-control" %>
        </div>
        <div class="d-grid gap-2 my-4">
          <%= button_tag "+ 新しい行き先を追加", type: "button", class: "btn btn-dark" %>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto my-2">
          <%= f.submit t('.submit'), class: "btn btn-success" %>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto my-2">
          <%= link_to "キャンセル", posts_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>