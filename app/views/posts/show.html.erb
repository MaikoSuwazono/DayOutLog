<% content_for(:title, @post.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <div class="row">
        <div class="col-md-9">
          <h3 style="display: inline;"><%= @post.title %></h3>
          <ul class="list-inline">
            <li class="list-inline-item"><%= "by #{@post.user.name}" %></li>
            <li class="list-inline-item">投稿日: <%= l @post.created_at %></li>
            <li class="list-inline-item">出発日: <%= l @post.departure_date %></li>
          </ul>
          <div class='d-flex justify-content-end'>
            <%= link_to "#", id: "button-edit-#{@post.id}" do %>
              <i class='bi bi-pencil-fill'></i>
            <% end %>
            <%= link_to "#", id: "button-delete-#{@post.id}", class: "ms-2" do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
          <div>
            <%= render @post_details %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>