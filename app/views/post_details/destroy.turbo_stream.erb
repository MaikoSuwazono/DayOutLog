<%= turbo_stream.remove "post_detail-#{@post_detail.id}" %>
<% if @post_details.any? %>
  <%= turbo_stream.replace "table-post_detail" do %>
    <tbody id="table-post_detail">
      <%= render @post_details, action_type: :new %>
    </tbody>
  <% end %>
<% else %>
  <%= turbo_stream.replace "table-post_detail" do %>
    <tbody id="table-post_detail">
      <tr id="post_detail">
        <td>
          <p class="text-center p-3">まだ行き先が追加されていません</p>
        </td>
      </tr>
    </tbody>
  <% end %>
<% end %>
